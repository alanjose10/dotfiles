# Top-level EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Lua
[*.lua]
indent_style = space
indent_size = 2

# Go (gofmt ignores indent_size, but editors still benefit)
[*.go]
indent_style = tab
indent_size = 4

# Python
[*.py]
indent_style = space
indent_size = 4

# JSON / YAML
[*.json]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Makefiles (special case!)
[Makefile]
indent_style = tab
